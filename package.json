{
  "name": "xyzzy2",
  "version": "0.0.1",
  "private": true,
  "license": "CC-BY-NC-SA-2.0",
  "description": "Web and API repository for the Xyzzy2 project.",
  "author": "Patrick Housley <patrick.f.housley@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:patrickhousley/xyzzy2.git"
  },
  "engines": {
    "node": ">=8 <9"
  },
  "scripts": {
    "start": "node server-web.dev.js",
    "start:test": "node server-web.test.js",
    "lint": "npm run tslint && npm run stylelint",
    "tslint": "tslint --type-check --project tsconfig.json './src/**/*.ts'",
    "stylelint": "stylelint 'src/**/*.scss' --syntax scss --allow-empty-input && stylelint 'src/**/*.css' --allow-empty-input",
    "lint:watch": "nodemon --watch src --ext '*' --exec 'npm run lint'",
    "test": "NODE_ENV=test jest --coverage",
    "test:watch": "NODE_ENV=test jest --watch",
    "build": "webpack --progress --profile --bail",
    "precommit": "lint-staged",
    "heroku-postbuild": "bash heroku-postbuild.sh"
  },
  "dependencies": {
    "@angular/animations": "4.3.4",
    "@angular/cdk": "2.0.0-beta.8",
    "@angular/common": "4.3.4",
    "@angular/core": "4.3.4",
    "@angular/flex-layout": "2.0.0-beta.8",
    "@angular/forms": "4.3.4",
    "@angular/http": "4.3.4",
    "@angular/material": "2.0.0-beta.8",
    "@angular/platform-browser": "4.3.4",
    "@angular/platform-browser-dynamic": "4.3.4",
    "@angular/router": "4.3.4",
    "body-parser": "1.17.2",
    "class-transformer": "0.1.7",
    "class-validator": "0.7.2",
    "classlist.js": "1.1.20150312",
    "compression": "1.7.0",
    "core-js": "2.5.0",
    "express": "4.15.4",
    "express-winston": "2.4.0",
    "hammerjs": "2.0.8",
    "helmet": "3.8.1",
    "inversify": "4.3.0",
    "pg": "7.1.2",
    "reflect-metadata": "0.1.10",
    "routing-controllers": "0.7.1",
    "rxjs": "5.4.3",
    "tslib": "1.7.1",
    "typeorm": "0.1.0-alpha.34",
    "web-animations-js": "2.3.1",
    "winston": "2.3.1",
    "zone.js": "0.8.16"
  },
  "devDependencies": {
    "@angular-devkit/build-optimizer": "0.0.13",
    "@angular/compiler": "4.3.4",
    "@angular/compiler-cli": "4.3.4",
    "@ngtools/webpack": "1.5.3",
    "@types/body-parser": "1.16.4",
    "@types/compression": "0.0.33",
    "@types/express": "4.0.36",
    "@types/helmet": "0.0.36",
    "@types/jest": "20.0.7",
    "@types/nock": "8.2.1",
    "@types/node": "8.0.22",
    "@types/supertest": "2.0.2",
    "@types/webpack": "3.0.5",
    "@types/webpack-dev-middleware": "1.9.2",
    "@types/winston": "2.3.4",
    "angular-router-loader": "0.6.0",
    "angular2-template-loader": "0.6.2",
    "autoprefixer": "7.1.2",
    "awesome-typescript-loader": "3.2.3",
    "circular-dependency-plugin": "3.0.0",
    "clean-webpack-plugin": "0.1.16",
    "codelyzer": "3.1.2",
    "connect-history-api-fallback": "1.3.0",
    "copy-webpack-plugin": "4.0.1",
    "cssnano": "3.10.0",
    "html-loader": "0.5.1",
    "html-webpack-plugin": "2.30.1",
    "husky": "0.14.3",
    "jest": "20.0.4",
    "jest-preset-angular": "2.0.5",
    "json-loader": "0.5.7",
    "lint-staged": "4.0.3",
    "nock": "9.0.14",
    "node-sass": "4.5.3",
    "nodemon": "1.11.0",
    "postcss-loader": "2.0.6",
    "prettier": "1.5.3",
    "raw-loader": "0.5.1",
    "sass-loader": "6.0.6",
    "sqlite3": "3.1.9",
    "stats-webpack-plugin": "0.6.1",
    "style-loader": "0.18.2",
    "stylefmt": "6.0.0",
    "stylelint": "8.0.0",
    "stylelint-config-standard": "17.0.0",
    "supertest": "3.0.0",
    "ts-jest": "20.0.10",
    "ts-node": "3.3.0",
    "tsconfig-paths": "2.2.0",
    "tslint": "5.6.0",
    "typescript": "2.4.2",
    "webpack": "3.3.0",
    "webpack-dev-middleware": "1.12.0",
    "webpack-merge": "4.1.0",
    "webpack-node-externals": "1.6.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --parser typescript --single-quote --write",
      "tslint --type-check --project tsconfig.json",
      "jest --findRelatedTests",
      "git add"
    ],
    "src/**/*.scss": [
      "stylefmt",
      "stylelint --syntax scss --allow-empty-input",
      "git add"
    ],
    "src/**/*.css": [
      "stylefmt",
      "stylelint --allow-empty-input",
      "git add"
    ]
  },
  "jest": {
    "preset": "jest-preset-angular",
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/test-lig/**/*.{js,ts}",
      "!**/*.interface.ts"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "coverageDirectory": "./coverage",
    "globals": {
      "tsConfigFile": "tsconfig.spec.json",
      "__TRANSFORM_HTML__": true
    },
    "moduleDirectories": [
      "node_modules",
      "<rootDir>/"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/test-lib/setup-jest.ts",
    "testRegex": "\\.spec\\.(ts|js)$"
  }
}
